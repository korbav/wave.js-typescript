{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json"]
  },
  "plugins": [
    "@typescript-eslint",
    "unused-imports",
    "import-quotes"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "unused-imports/no-unused-imports": "error",
    "import-quotes/import-quotes": [1, "single"]
  },
  "ignorePatterns": [
    "dist/*.js",
    "*.d.ts"
  ],
  "env": {
    "browser": true,
    "node": true
  }
}
